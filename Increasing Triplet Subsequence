bool increasingTriplet(int* nums, int numsSize) {
    int first = INT_MAX;
    int second = INT_MAX;

    for (int i = 0; i < numsSize; i++) {
        if (nums[i] <= first) {
            first = nums[i];             // smallest so far
        } 
        else if (nums[i] <= second) {
            second = nums[i];            // second smallest
        } 
        else {
            return true;                 // found nums[i] > first and second
        }
    }
    return false;
}
